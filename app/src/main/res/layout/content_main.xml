<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.contextawarenotifications.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sample_main_layout">
        <fragment
            android:name="com.example.contextawarenotifications.LogFragment"
            android:id="@+id/log_fragment"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/enable_disable_button_activity_recognition"
            android:onClick="onClickEnableOrDisableActivityRecognition" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>